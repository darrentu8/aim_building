
@import url('https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;700&display=swap');
.index-box
  z-index: 10;
  width: 100%;
  min-height: 100%;
  min-height: 100vh;
  background-size: 100% !important;
  background-repeat: repeat-y;
  background-position: center top;
  p
    margin-bottom: 0;
  ul
    margin: 0;
    padding: 0;
    list-style: none;
  .sorollView
    position: absolute;
    bottom: 0;
    left: 0;
    top: 7.9rem;
    width: 100%;
  .header
    top 0
    position: fixed;
    width :100%;
    padding: 6.7vw 5.3vw 1.5vw;
    z-index:20;
    transition: all 0.3s;
    .page-back-btn
      img
        width: 2.4vw;
    .menu-btn
      width: 3.6vw;
    button
      background-color:transparent;
      padding: 0;
      border:0;
      &:focus, &:hover, &:active
        box-shadow:none !important;
        outline:0;
        background-color:transparent;
        padding: 0;
        border:0;
  .page-title
    flex:1;
    text-align:center;
    font-size:1.32rem;
    color:#EB7979;
    font-weight:bold;
  .white-bg
    background-color: rgba(255,255,255,.7);
    border-radius:2.3vw;
    padding: 3.34vw 3.12vw;
    margin-bottom:3.34vw;
  .white-bg .title
    font-size:1.32rem;
    color:#EB7979;
    margin-bottom: 3px;
    font-weight:bold;
  .content-box
    padding: 2.27vw 1.74vw;
  .profile-box
    .img
      width: 16vw;
      height: 16vw;
      margin 0 auto 8px;
      overflow:hidden;
      border-radius: 6vw;
      position: relative
      img
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        object-fit: cover;
        object-position: 50% 50%;
    .name
      font-size:1.5rem;
      margin-bottom 0;
      font-weight:bold;
      color:#EB7979;
    .txt
      font-size:1.3rem;
      color:#939393;
      font-weight:bold;
      margin-bottom 0
  .follow-info
    display:flex;
    align-items: center;
    padding: 3.34vw 3.12vw 3.8vw;
    &-item
      padding: 1.8vw;
      width: calc(100% / 2 - 2vw);
      margin-right: 4.5vw;
      color: #fff;
      border-radius: 2.7vw;
      &:nth-child(1)
        background-color: #ff9b9b;
      &:nth-child(2)
        background-color: #ffba91;
        margin-right 0
      .num
        font-weight: bold;
        font-size: 1.5rem;
  .link-box
    display:flex;
    text-align:center;
    a
      &:hover
        text-decoration: none;
    li
      flex:1;
    img
      height: 7vw;
    p
      color: #EB7979;
      font-weight: bold;
  .job-info
    li
      display:flex;
      justify-content: space-between;
      margin 4px 0
  .map-iframe
    margin-top: 2.7vw;
    border-radius: 2.7vw;
    overflow: hidden;
    position: relative;
    padding-top: 30%;
    &::after
      content:"";
      display: block;
      width:calc(100% - 280px)
      height 100%
      position:absolute;
      right: 0;
      top 0
      z-index: 10;
    &::before
      content:"";
      display: block;
      width 100%;
      height calc(100% - 58px);
      position:absolute;
      left: 0;
      bottom 0
      z-index: 10;
    .map-cover
      &::before,
      &::after
        content:"";
        position: absolute;
        display: block;
      &::before
        width:100%;
        height:10px;
      &::after
        height 100%
        width 10px
    iframe
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
  .service
    &-box
      a
        color: #969696;
        padding-bottom:2.7vw;
        margin-bottom:2.7vw;
        border-bottom: 1px solid #ededed;
        display:block;
        &:hover
          text-decoration: none;
    &-item
      &:last-child
        a
          padding-bottom: 0;
          margin-bottom: 0;
          border-bottom:0;
    &-list
      margin-top:3.2vw;
    &-title
      color:#5D5D5D;
      font-size: 1.1rem;
      font-weight:bold;
    &-info
      display:flex;
      align-items: center;
      margin-bottom: 3.4vw;
      p
        overflow: hidden;
        text-overflow: ellipsis;
        /*display: -webkit-box;*/
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        white-space: pre-wrap;
    &-img
      position: relative;
      width: 74px;
      height: 74px;
      // width: 10vw;
      // height: 10vw;
      border-radius: 1.6vw;
      overflow: hidden;
      img
        width: 100%;
        height : 100%;
        display: block;
        object-fit: cover;
        .img
          object-position: 50% 50%;
    &-txt
      flex:1
  @media(max-width:735px)
    .map-iframe
      &::after
        width:calc(100% - 110px)
      &::before
        height calc(100% - 37px);
  @media(max-width:700px)
    padding-top:7.4rem;
    .sorollView
      top:7.4rem;
  @media(max-width:600px)
    padding-top:6.5rem;
    p, .job-info
      font-size:15px;
    .sorollView
      top:6.5rem;
    .page-title,
    .white-bg .title
      font-size:1.1rem;
    .header
      padding-top 8vw
    .profile-box
      .name
        font-size:1.3rem;
        color:#EB7979;
      p
        font-size:1.1rem;
    .user-info
      &-item
        .num
          font-size: 1.3rem;
    .service
      &-item
        font-size:15px;
      &-title
        font-size: 1rem;
  @media(max-width:480px)
    padding-top:5.6rem;
    p, .job-info
      font-size:12px;
    .sorollView
      top:5.6rem;
    .page-title,
    .white-bg .title
      font-size:0.9rem;
    .header
      padding-top 10vw
    .profile-box
      .name
        font-size:1.1rem;
        color:#EB7979;
      p
        font-size:0.9rem;
    .user-info
      &-item
        .num
          font-size: 1.1rem;
    .service
      &-item
        font-size:12px;
      &-title
        font-size: 0.9rem;
      &-img
        width: 74px;
        height: 74px;
        // width: 45px;
        // height: 45px;
  @media(max-width:414px)
    .header
      padding-top 12vw




