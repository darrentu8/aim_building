
@import url('https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;700&display=swap');
.basePageBack
  z-index: 10;
  width: 100%;
  padding-top:7.9rem;
  min-height: 100vh;
  background-size:cover;
  .sorollView
    position: absolute;
    bottom: 0;
    left: 0;
    top: 7.9rem;
    width: 100%;
  .bg
    height:100%;
  .header
    top 0
    position: fixed;
    left:0;
    color: #ffffff;
    width :100%;
    padding: 6.7vw 5.3vw 1.5vw;
    z-index:20;
    transition: all 0.3s;
    .page-back-btn
      img
        width: 2.4vw;
    .menu-btn
      width: 3.6vw;
    button
      background-color:transparent;
      padding: 0;
      border:0;
      &:focus, &:hover, &:active
        box-shadow:none !important;
        outline:0;
        background-color:transparent;
        padding: 0;
        border:0;
  .content-box
    // padding:0 5.3vw 18.7vw;
    z-index:2;
    position: relative;
    > div
      max-width:700px;
      margin: 0 auto;
  @media(max-width:700px)
    padding-top:7.4rem;
    .sorollView
      top:7.4rem;
  @media(max-width:600px)
    padding-top:6.5rem;
    .sorollView
      top:6.5rem;
    .header
      padding-top 8vw
  @media(max-width:480px)
    padding-top:5.6rem;
    .sorollView
      top:5.6rem;
    .header
      padding-top 10vw
  @media(max-width:414px)
    .header
      padding-top 12vw



